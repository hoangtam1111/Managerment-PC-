@model WebPC.Models.Brand
@{
    ViewBag.Title = "Update";
}
<h2>Chỉnh sửa sản phẩm</h2>
<form action="/admin/brand/update/@Model.BrandId" method="post" enctype="multipart/form-data">
    <table class="table table-bordered">
        <input type="hidden" name="BrandId" value="@Model.BrandId" />
        <tr>
            <td><label class="form-label">Tên thương hiệu</label></td>
            <td><input type="text" value="@Model.BrandName" class="form-control" id="BrandName" placeholder="Tên thương hiệu" name="BrandName" /></td>
        </tr>
        <tr>
            <td><label class="form-label">Logo thương hiệu</label></td>
            <td><input type="text" value="@Model.BrandLogo" class="form-control" id="BrandLogo" placeholder="Link logo" name="BrandLogo" /></td>
        </tr>
    </table>
    <button type="submit" class="btn btn-primary">Sửa</button>
    <a href="/admin/brand" class="btn">Huỷ</a>
</form>
