@model WebPC.Identity.AppUser
@{
    ViewBag.Title = "Detail";
}
<link href="~/Css/Users.css" rel="stylesheet" />
</style>
<h2>Thông tin user</h2>
<table class="table table-bordered">
    <tr>
        <td>Tài khoản</td>
        <td>@Model.UserName</td>
    </tr>
    <tr>
        <td>Họ tên</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Địa chỉ</td>
        <td>@Model.DiaChi</td>
    </tr>
</table>
<a href="/admin/users/index" class="btn action-1">Quay lại trang user</a>