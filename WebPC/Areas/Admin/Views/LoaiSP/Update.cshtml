@model WebPC.Models.LoaiSP
@{
    ViewBag.Title = "Update";
}
<h2>Chỉnh sửa loại sản phẩm</h2>
<form action="/admin/LoaiSP/update/@Model.MaLoai" method="post" enctype="multipart/form-data">
    <table class="table table-bordered">
        <input type="hidden" name="MaLoai" value="@Model.MaLoai" />
        <tr>
            <td><label class="form-label">Tên Loại</label></td>
            <td><input type="text" value="@Model.TenLoai" class="form-control" id="TenLoai" placeholder="Tên Loại" name="TenLoai" /></td>
        </tr>
    </table>
    <button type="submit" class="btn btn-primary">Sửa</button>
    <a href="/admin/LoaiSP" class="btn">Huỷ</a>
</form>
